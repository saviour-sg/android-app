<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".ThanksSuccess">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="5sp"
                android:textSize="22sp"
                android:text="THANK YOU,"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:layout_marginStart="5sp"
                android:textSize="22sp"
                android:text="GOWREESH"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="3sp"
            android:layout_marginBottom="30sp"
            android:layout_width="150sp"
            android:layout_gravity="center"
            android:layout_height="150sp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_marginStart="5sp"
            android:textSize="20sp"
            android:text="We appreciate your donation!"
            android:textColor="@color/md_theme_light_secondary" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Your contribution will help us change lives – literally!"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="5sp"
            android:textSize="13sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:text="Someone who would have lost their life was spared because you gave us your blood ❤️"
            android:textColor="#8e8e8e" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_line"/>
<LinearLayout
    android:layout_width="350sp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <TextView
        android:layout_gravity="center"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_marginStart="5sp"
        android:textSize="11sp"
        android:text="PATIENT"
        android:textColor="@color/md_theme_light_secondary" />
    <LinearLayout
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="5sp"
            android:textSize="15sp"
            android:text="ARUN VIJAY"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="5sp"
            android:textSize="13sp"
            android:text="Apollo Hospital, Chennai"
            android:textColor="@android:color/black" />
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="10sp"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_gravity="center"
        android:src="@drawable/blood_drop_red"/>
    <TextView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_marginStart="5sp"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:text="B+"
        android:textColor="@color/md_theme_light_secondary" />
</LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="300sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            app:dividerColor="#e8e8e8"
            android:layout_height="1sp"/>
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="5sp"
                android:textSize="11sp"
                android:text="ATTENDEE"
                android:textColor="@color/md_theme_light_secondary" />
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/donorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginStart="5sp"
                    android:textSize="15sp"
                    android:text="Ranjith Thangaraju"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginStart="5sp"
                    android:textSize="13sp"
                    android:text="+9190800993100"
                    android:textColor="@android:color/black" />
            </LinearLayout>
            <ImageView
                android:id="@+id/call"
                android:layout_marginLeft="10sp"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/phone"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="CLOSE"
            android:fontFamily="@font/inter_bold"
            android:layout_gravity="center"
            ></Button>
    </LinearLayout>
</LinearLayout>